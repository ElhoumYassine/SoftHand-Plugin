<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
   
    <xacro:macro name="palm_central" params="name parent side *origin ns">

		<!-- World -->
		<link name="${parent}">
		</link>
		
		<!-- World to palm base -->
		<joint name="${ns}_${name}_joint" type="fixed">
			<parent link="${parent}"/>
			<child link="${ns}_${name}_link"/>
			<xacro:insert_block name="origin"/>
		</joint>

		<link name="${ns}_${name}_link">
				<visual>
				<material name="grey" />
					<geometry>
					<mesh
						filename="$(arg meshes_dir)/palm_central.stl"
						scale="0.001 0.001 0.001" />
					</geometry>
				<origin xyz="0 0 0" rpy="0 0 0" />
				</visual>
				<inertial>
					<mass value="5.5962922e-1" />
					<origin xyz="-7.3637766e-03 1.5857667e-02  6.7065321e-02" rpy="0 0 0" />
					<inertia ixx="8.2936450e-04" ixy="-1.9292962e-06"  ixz="1.6410516e-05"
											iyy="8.0447768e-04"  iyz="-1.3735281e-04"
																izz="3.0664811e-04" />
					</inertial>
				<collision>
					<geometry>
					<mesh
						filename="$(arg meshes_dir)/palm_central.stl"
						scale="0.001 0.001 0.001" />
					</geometry>
				<origin xyz="0 0 0" rpy="0 0 0" />
				</collision>
		</link>




		<!-- palm base to Thumb -->
		<joint name="${ns}_${name}_thumb_virtual_joint" type="revolute">
			<axis xyz="0 0 -1"/>
			<limit effort="30" velocity="10" lower="0" upper="1.57" />
			<dynamics damping="0.0" friction="0.0" />
			<origin xyz=" -0.0000000021 32.5059e-3 39.6398e-3" rpy="0 0.3490656 1.5707963"/>
			<parent link="${ns}_${name}_link"/>
			<child link="${ns}_${name}_thumb_virtual_link"/>
		</joint>

	    <link name="${ns}_${name}_thumb_virtual_link">
		   <inertial>
				<origin rpy="0 0 0" xyz="0 0 0"/>
				<mass value="0.001"/>
				<inertia  ixx="0.0001"      ixy="0"  	    ixz="0" 
						iyy="0.0001" 	    iyz="0" 
							izz="0.0001" />
		   </inertial>
	
	    </link>

		<!-- palm base to Litte virtual -->

		<joint name="${ns}_${name}_little_virtual_joint" type="revolute">
			<axis xyz="0 0 1"/>
			<dynamics damping="0.0" friction="0.0"/>
			<limit effort="100" lower="0.0" upper="0.4" velocity="100"/>
			<origin xyz=" -0.0000000091 -10.6603e-3 66.1817e-3" rpy="0 -0.1745327 -1.5707963"/>
			<parent link="${ns}_${name}_link"/>
			<child link="${ns}_${name}_little_virtual_link"/>
		</joint>

		<link name="${ns}_${name}_little_virtual_link">
		   <inertial>
			<origin rpy="0 0 0" xyz="0 0 0"/>
			<mass value="0.001"/>
			<inertia  ixx="0.0001"      ixy="0"  	    ixz="0" 
					iyy="0.0001" 	    iyz="0" 
						izz="0.0001" />
		   </inertial>
	
	    </link>
		
		<gazebo reference="${ns}_${name}_link">
			<selfCollide>false</selfCollide>
			<material>Gazebo/Grey</material>
			<kp value="1e4" />
			<kd value="1e2" />
			<surface>
			<friction>
				<ode>
				<mu>0.133</mu> 
				<mu2>0.133</mu2>
				</ode>
			</friction>
			</surface>
		</gazebo>

    </xacro:macro>
</robot>