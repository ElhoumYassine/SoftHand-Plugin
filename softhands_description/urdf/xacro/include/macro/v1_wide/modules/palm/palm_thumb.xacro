<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
   
    <xacro:macro name="palm_thumb" params="name parent side *origin ns">


		<joint name="${ns}_${parent}_virtual_joint" type="revolute">
			<parent link="${ns}_${parent}_link"/>
			<child link="${ns}_${name}_link"/>
			<xacro:insert_block name="origin"/>
			<axis xyz="0 0 -1" />
      		<limit effort="30" velocity="1.0" lower="0" upper="1.57" />
			<dynamics damping="$(arg virtual_damping)" friction="$(arg virtual_friction)"/>
		</joint>

	
		<link name="${ns}_${name}_link">
				<visual>
				<material name="grey" />
					<geometry>
					<mesh
						filename="$(arg meshes_dir)/palm_thumb.stl"
						scale="0.001 0.001 0.001" />
					</geometry>
				<origin xyz="0 0 0" rpy="0 0 0" />
				</visual>
				<inertial>
				<origin xyz="1.3888149e-2 -7.0704771e-3  1.1337304e-3" rpy="0 0 0" />
				<mass value="9.2767000e-02" />
					<inertia ixx="5.2239281e-5" ixy="2.7341002e-6"  ixz="6.0525027e-6"
											iyy="5.5447805e-5"  iyz="-4.6570702e-6"
																izz="2.7144559e-5" />
					</inertial>
				<collision>
					<geometry>
					<mesh
						filename="$(arg meshes_dir)/palm_thumb_collision.stl"
						scale="0.001 0.001 0.001" />
					</geometry>
				<origin xyz="0 0 0" rpy="0 0 0" />
				</collision>
		</link>



		<!-- Palm thumb to thumb support -->
		<joint name="${ns}_${name}_support_joint" type="fixed">
			<parent link="${ns}_${name}_link"/>
			<child link="${ns}_${name}_support_link"/>
			<origin xyz=" 24.2343e-3 -5.0e-3 9.13010e-3" rpy="-1.5707963 -1.0471972 0"/>
		</joint>

		<link name="${ns}_${name}_support_link">
				<visual>
				<material name="grey" />
					<geometry>
					<mesh
						filename="$(arg meshes_dir)/thumb_support.stl"
						scale="0.001 0.001 0.001" />
					</geometry>
				<origin xyz="0 0 0" rpy="0 0 0" />
				</visual>
				<inertial>
				<origin xyz="1.1097412e-02 -4.2327979e-05 -4.7109856e-04" rpy="0 0 0" />
				<mass value="1.6408860e-02" />
					<inertia ixx="1.8835019e-06" ixy="-4.9293913e-09" ixz="-2.5700318e-08"
											iyy="1.2828797e-06"  iyz="-4.0065947e-09"
																izz="2.2986135e-06" />
					</inertial>
				<collision>
					<geometry>
					<mesh
						filename="$(arg meshes_dir)/thumb_support_collision.stl"
						scale="0.001 0.001 0.001" />
					</geometry>
				<origin xyz="0 0 0" rpy="0 0 0" />
				</collision>
		</link>

		<gazebo reference="${ns}_${name}_link">
			<selfCollide>false</selfCollide>
			<material>Gazebo/Grey</material>
		</gazebo>

		<gazebo reference="${ns}_${name}_support_link">
			<selfCollide>false</selfCollide>
			<material>Gazebo/White</material>
		</gazebo>

    </xacro:macro>
</robot>