<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
   
    <xacro:macro name="palm_little" params="name parent side *origin ns">


		<joint name="${ns}_${parent}_virtual_joint" type="revolute">
			<parent link="${ns}_${parent}_link"/>
			<child link="${ns}_${name}_link"/>
			<xacro:insert_block name="origin"/>
			<axis xyz="0 0 1" />
      		<limit effort="30" velocity="1.0" lower="0" upper="0.3" />
			<dynamics damping="$(arg virtual_damping)" friction="$(arg virtual_friction)"/>
		</joint>

	
		<link name="${ns}_${name}_link">
				<visual>
				<material name="grey" />
					<geometry>
					<mesh
						filename="$(arg meshes_dir)/palm_little.stl"
						scale="0.001 0.001 0.001" />
					</geometry>
				<origin xyz="0 0 0" rpy="0 0 0" />
				</visual>
				<inertial>
				<origin xyz="1.9466642e-02  5.5041380e-03 -7.9253974e-04" rpy="0 0 0" />
				<mass value="1.7998957e-1" />
					<inertia ixx=" 2.4776164e-04" ixy="-2.2762031e-06"  ixz="-2.5699035e-05"
											iyy="2.6460918e-04"  iyz=" 1.5348716e-05"
																izz="5.9121350e-05" />
					</inertial>
				<collision>
					<geometry>
					<mesh
						filename="$(arg meshes_dir)/palm_little_collision.stl"
						scale="0.001 0.001 0.001" />
					</geometry>
				<origin xyz="0 0 0" rpy="0 0 0" />
				</collision>
		</link>

		<gazebo reference="${ns}_${name}_link">
			<selfCollide>$(arg selfCollide)</selfCollide>
			<material>Gazebo/Grey</material>
		</gazebo>
    </xacro:macro>
</robot>