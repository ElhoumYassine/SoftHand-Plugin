<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
   
    <xacro:macro name="phalanx" params="name parent ns *origin side">



		<!-- Virtual joint from knuckle->proximal or proximal->middle   -->


		<joint name="${ns}_${name}_virtual_joint" type="revolute">
			<axis xyz="0 0 1"/>
			<limit effort="30" velocity="1.0" lower="0" upper="0.785398" />
			<xacro:insert_block name="origin"/>
			<parent link="${ns}_${parent}_link"/>
			<child link="${ns}_${name}_virtual_link"/>
			<dynamics damping="$(arg virtual_damping)" friction="$(arg virtual_friction)"/>
			
		</joint>

		<link name="${ns}_${name}_virtual_link">
		   <inertial>
				<origin rpy="0 0 0" xyz="0 0 0"/>
				<mass value="0.001"/>
				<inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
		   </inertial>
	
	    </link>


		<!-- Proximal phalanx -->

		<joint name="${ns}_${name}_joint" type="revolute">
			<axis xyz="0 0 1"/>
			<limit effort="30" velocity="1.0" lower="0" upper="0.785398" />
			<origin rpy="0 0 0" xyz="9e-3 0 0"/>
            <parent link="${ns}_${name}_virtual_link"/>
			<child link="${ns}_${name}_link"/>
			<dynamics damping="$(arg damping)" friction="$(arg friction)"/>

		</joint>

		<link name="${ns}_${name}_link">
				<visual>
				<material name="grey" />
					<geometry>
					<mesh
						filename="$(arg meshes_dir)/phalanx.stl"
						scale="0.001 0.001 0.001" />
					</geometry>
					<origin xyz="0 0 0" rpy="0 0 0" />
				</visual>
				<inertial>
					<mass value="2.4190505e-02"/>
					<origin rpy="0 0 0" xyz=" 2.0923634e-02  8.4162795e-04 -5.2131884e-05"/>
					<inertia ixx="1.9981795e-06" ixy="-6.0806048e-08" ixz="0.0" iyy="4.7810654e-06" iyz="0.0" izz="5.0961924e-06"/>
				</inertial>
				<collision>
					<geometry>
					<mesh
						filename="$(arg meshes_dir)/phalanx.stl"
						scale="0.001 0.001 0.001" />
					</geometry>
				<origin xyz="0 0 0" rpy="0 0 0" />
				</collision>
		</link>


		
		<gazebo reference="${ns}_${name}_link">
			<material>Gazebo/Gray</material>
			<selfCollide>$(arg selfCollide)</selfCollide>
			<kp value="1e4" />
			<kd value="1e2" />
			<surface>
			<friction>
				<ode>
				<mu>0.133</mu> 
				<mu2>0.133</mu2>
				</ode>
			</friction>
			</surface>
		</gazebo>
    </xacro:macro>
</robot>