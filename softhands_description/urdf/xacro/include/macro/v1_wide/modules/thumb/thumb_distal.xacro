<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
   
    <xacro:macro name="thumb_distal" params="name parent side ns *origin">
		
		

		<!-- Virtual joint from thumb proximal to thumb distal   -->
		<joint name="${ns}_${name}_virtual_joint" type="revolute">
			<axis xyz="0 0 1"/>
			<xacro:insert_block name="origin"/>
			<parent link="${ns}_${parent}_link"/>
			<child link="${ns}_${name}_virtual_link"/>
			<limit effort="30" velocity="0.0" lower="0" upper="0.785398" />
			<dynamics damping="$(arg virtual_damping)" friction="$(arg virtual_friction)"/>
		</joint>

	    <link name="${ns}_${name}_virtual_link">
		   <inertial>
				<origin rpy="0 0 0" xyz="0 0 0"/>
				<mass value="0.001"/>
				<inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
		   </inertial>
	
	    </link>



		<!-- Thumb middle  -->
		<joint name="${ns}_${name}_joint" type="revolute">
			<parent link="${ns}_${name}_virtual_link"/>
			<child link="${ns}_${name}_link"/>
			<origin rpy="0 0.0101229 0" xyz="8.99947e-3 0 -0.0973875e-3"/>
			<axis xyz="0 0 1" />
      		<limit effort="30" velocity="0.0" lower="0" upper="0.785398" />
			<dynamics damping="$(arg damping)" friction="$(arg friction)"/>
		</joint>

	
		<link name="${ns}_${name}_link">
				<visual>
				<material name="grey" />
					<geometry>
					<mesh
						filename="$(arg meshes_dir)/phalanx_dist_thumb.stl"
						scale="0.001 0.001 0.001" />
					</geometry>
				<origin xyz="0 0 0" rpy="0 0 0" />
				</visual>
				<inertial>
					<mass value="2.3674554e-02"/>
					<origin rpy="0 0 0" xyz="1.6161362e-02  1.6241404e-03 -3.2684152e-05 "/>
					<inertia ixx="2.578454e-06" ixy="0.0" ixz="0.0" iyy="2.9887569e-06" iyz="0.0" izz="3.8277106e-06"/>
				</inertial>
				<collision>
					<geometry>
					<mesh
						filename="$(arg meshes_dir)/phalanx_dist_thumb_collision.stl"
						scale="0.001 0.001 0.001" />
					</geometry>
				<origin xyz="0 0 0" rpy="0 0 0" />
				</collision>
		</link>



		<gazebo reference="${ns}_${name}_link">
			<material>Gazebo/Grey</material>
			<selfCollide>$(arg selfCollide)</selfCollide>
		</gazebo>

    </xacro:macro>
</robot>