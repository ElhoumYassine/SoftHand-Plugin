<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
   
    <xacro:macro name="thumb_proximal" params="name parent side ns *origin">
		


		<!-- Virtual joint from thumb knuckle to thumb proximal   -->
		<joint name="${ns}_${name}_joint" type="revolute">
			<axis xyz="0 0 1"/>
			<limit effort="30" velocity="10" lower="0" upper="0.785398" />
			<xacro:insert_block name="origin"/>
			<parent link="${ns}_${parent}_link"/>
			<child link="${ns}_${name}_virtual_link"/>
			<dynamics damping="$(arg virtual_damping)" friction="$(arg virtual_friction)"/>
		</joint>

	    <link name="${ns}_${name}_virtual_link">
		   <inertial>
				<origin rpy="0 0 0" xyz="0 0 0"/>
				<mass value="0.001"/>
				<inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
		   </inertial>
	    </link>


		<!-- Thumb Proximal joint  -->
		<joint name="${ns}_${name}_virtual_joint" type="revolute">
			<parent link="${ns}_${name}_virtual_link"/>
			<child link="${ns}_${name}_link"/>
			<origin rpy="0 0 0"  xyz="9e-3 0 0 "/>
			<axis xyz="0 0 1" />
      		<limit effort="30" velocity="1.0" lower="0" upper="0.785398" />
			<dynamics damping="$(arg damping)" friction="$(arg friction)"/>
		</joint>

	
		<link name="${ns}_${name}_link">
				<visual>
				<material name="grey" />
					<geometry>
					<mesh
						filename="$(arg meshes_dir)/phalanx_medium_thumb.stl"
						scale="0.001 0.001 0.001" />
					</geometry>
				<origin xyz="0 0 0" rpy="0 0 0" />
				</visual>
				<inertial>
					<mass value="3.3679189e-02"/>
					<origin rpy="0 0 0" xyz="2.0950700e-02  1.1175133e-03 -3.7424390e-05"/>
					<inertia ixx="4.1328993e-06" ixy="-8.6599874e-08" ixz="0.0" iyy="7.4560101e-06" iyz="-1.0265429e-09" izz="6.6161853e-06"/>
				</inertial>
				<collision>
					<geometry>
					<mesh
						filename="$(arg meshes_dir)/phalanx_medium_thumb.stl"
						scale="0.001 0.001 0.001" />
					</geometry>
				<origin xyz="0 0 0" rpy="0 0 0" />
				</collision>
		</link>


		<gazebo reference="${ns}_${name}_link">
			<material>Gazebo/Grey</material>
			<selfCollide>$(arg selfCollide)</selfCollide>
			<kp value="1e4" />
			<kd value="1e2" />
			<surface>
			<friction>
				<ode>
				<mu>0.133</mu> 
				<mu2>0.133</mu2>
				</ode>
			</friction>
			</surface>
		</gazebo>

    </xacro:macro>
</robot>