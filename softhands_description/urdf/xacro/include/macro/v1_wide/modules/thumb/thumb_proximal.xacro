<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
   
    <xacro:macro name="thumb_proximal" params="name parent side ns *origin">
		


		<!-- Virtual joint from thumb knuckle to thumb proximal   -->
		<joint name="${ns}_${name}_joint" type="fixed">
			<axis xyz="0 0 1"/>
			<limit effort="0.0" lower="0" upper="0"  velocity="0.0"/>
			<origin xyz=" 31.2357e-3 23.0197e-3 0.167417e-3" rpy=" 0.1745395 0.0000165 0.7597087"/>
			<parent link="${ns}_${parent}_link"/>
			<child link="${ns}_${name}_virtual_link"/>
		</joint>

	    <link name="${ns}_${name}_virtual_link">
		   <inertial>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<mass value="1e-3"/>
			<inertia ixx="1e-9" ixy="0.0" ixz="0.0" iyy="1e-9" iyz="0.0" izz="1e-9"/>
		   </inertial>
	
	    </link>

		
		<gazebo reference="${ns}_${name}_virtual_link">
			<material>Gazebo/Grey</material>
			<selfCollide>true</selfCollide>
			<kp value="1e4" />
			<kd value="1e2" />
			<surface>
			<friction>
				<ode>
					<mu>0.133</mu> 
					<mu2>0.133</mu2>
				</ode>
			</friction>
			</surface>
		</gazebo>

		<!-- Thumb Proximal joint  -->
		<joint name="${ns}_${name}_virtual_joint" type="revolute">
			<parent link="${ns}_${name}_virtual_link"/>
			<child link="${ns}_${name}_link"/>
			<xacro:insert_block name="origin"/>
			<axis xyz="0 -1 0" />
      		<limit effort="30" velocity="1.0" lower="0" upper="1.57" />
			<dynamics damping="0.08" friction="0.0" />
		</joint>

	
		<link name="${ns}_${name}_link">
				<visual>
				<material name="grey" />
					<geometry>
					<mesh
						filename="$(arg meshes_dir)/phalanx_medium_thumb.stl"
						scale="0.001 0.001 0.001" />
					</geometry>
				<origin xyz="0 0 0" rpy="0 0 0" />
				</visual>
				<inertial>
					<mass value="0.0063"/>
					<origin rpy="0 0 0" xyz="4.7601567e-03 -1.3786947e-03 0.0"/>
					<inertia ixx="1.8024201e-07" ixy="5.756798e-09" ixz="0.0" iyy="2.3516266e-07" iyz="0.0" izz="2.691504e-07"/>
				</inertial>
				<collision>
					<geometry>
					<mesh
						filename="$(arg meshes_dir)/phalanx_medium_thumb.stl"
						scale="0.001 0.001 0.001" />
					</geometry>
				<origin xyz="0 0 0" rpy="0 0 0" />
				</collision>
		</link>


		<gazebo reference="${ns}_${name}_link">
			<material>Gazebo/Grey</material>
			<selfCollide>true</selfCollide>
			<kp value="1e4" />
			<kd value="1e2" />
			<surface>
			<friction>
				<ode>
				<mu>0.133</mu> 
				<mu2>0.133</mu2>
				</ode>
			</friction>
			</surface>
		</gazebo>

    </xacro:macro>
</robot>