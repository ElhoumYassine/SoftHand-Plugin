<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="thumb_knuckle" params="type ns position orientation">


    <!-- KNUCKLE -->
    <joint name="${ns}_${type}_knuckle_joint" type="revolute">
      <origin xyz="${position}" rpy="${orientation}"/>
      <parent link="${ns}_palm_link"/>
      <child link="${ns}_${type}_knuckle_link"/>
      <axis xyz="0 0 -1"/>
      <dynamics damping="0.0" friction="0.0"/>
      <limit effort="100" lower="0.0" upper="1.571" velocity="100"/>
      <mimic joint="${ns}_synergy_joint" multiplier="2.542"/>
    </joint>

    <link name="${ns}_${type}_knuckle_link">
      <inertial>
        <mass value="0.01"/>
        <origin rpy="0 0 0" xyz="1.3071561e-02 -2.7357764e-03 6.4347823e-04"/>
        <inertia ixx="3.5865978e-07" ixy="2.0944224e-07" ixz="-6.8657569e-08" iyy="1.3885564e-06" iyz="3.2170608e-08" izz="1.3571203e-06"/>
      </inertial>
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://softhands_description/meshes/softhands/v3.0/ph_thumb_r.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="qbhand/knuckle"/>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://softhands_description/meshes/softhands/v3.0/ph_thumb_r_collision.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
    </link>

    <gazebo reference="${ns}_${type}_knuckle_link">
      <material>Gazebo/Grey</material>
      <selfCollide>false</selfCollide>
	  </gazebo>

  </xacro:macro>

</robot>