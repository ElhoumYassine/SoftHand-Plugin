<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <xacro:macro name="fingertip" params="type ns parent name position orientation">


    <joint name="${ns}_${type}_${parent}_${name}_joint" type="revolute">
      <origin rpy="${orientation}" xyz="${position}"/>
      <parent link="${ns}_${type}_${parent}_link"/>
      <child link="${ns}_${type}_${parent}_${name}_virtual_link"/>
      <axis xyz="0 0 -1"/>
      <dynamics damping="0.0" friction="0.0"/>
      <limit effort="30" velocity="1.0" lower="-1.57" upper="1.57" />
      <mimic joint="${ns}_synergy_joint" multiplier="0.785"/>
    </joint>
