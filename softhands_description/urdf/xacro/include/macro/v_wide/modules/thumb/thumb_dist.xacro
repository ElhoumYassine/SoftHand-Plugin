<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
   
    <xacro:macro name="thumb_dist" params="name parent side *origin">
		<!-- Thumb middle  -->
		<joint name="${side}_${name}_joint" type="revolute">
			<parent link="${side}_${parent}_link"/>
			<child link="${side}_${name}_link"/>
			<xacro:insert_block name="origin"/>
			<axis xyz="0 0 1" />
      		<limit effort="30" velocity="1.0" lower="0" upper="1.57" />
			<dynamics damping="0.08" friction="0.0" />
		</joint>

	
		<link name="${side}_${name}_link">
				<visual>
				<material name="grey" />
					<geometry>
					<mesh
						filename="package://softhands_description/meshes/softhands/wide/${side}/phalanx_dist_thumb.stl"
						scale="0.001 0.001 0.001" />
					</geometry>
				<origin xyz="0 0 0" rpy="0 0 0" />
				</visual>
				<inertial>
				<origin xyz="-9.4524165e-3 -3.2786419e-2 -1.9973598e-3" rpy="0 0 0" />
				<mass value="1.2747079e-1" />
					<inertia ixx=" 1.1656420e-4" ixy="-3.6262159e-5"  ixz="-2.3018113e-6"
											iyy=" 5.3305451e-5"  iyz=" -5.5947664e-6"
																izz=" 1.2416468e-4" />
					</inertial>
				<collision>
					<geometry>
					<mesh
						filename="package://softhands_description/meshes/softhands/wide/${side}/phalanx_dist_thumb.stl"
						scale="0.001 0.001 0.001" />
					</geometry>
				<origin xyz="0 0 0" rpy="0 0 0" />
				</collision>
		</link>




    </xacro:macro>
</robot>