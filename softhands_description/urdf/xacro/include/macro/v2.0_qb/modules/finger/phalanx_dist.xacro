<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <xacro:macro name="phalanx_dist" params="ns name parent *origin side">

    <!-- Proximal JOINT -->
    <joint name="${ns}_${name}_joint" type="revolute">
      <xacro:insert_block name="origin"/>
      <parent link="${ns}_${parent}_link"/>
      <child link="${ns}_${name}_link"/>
      <axis xyz="0 0 -1"/>
      <dynamics damping="0.0" friction="0.0"/>
      <limit effort="100" lower="0.0" upper="0.785" velocity="100"/>
    </joint>

    <!-- LINK -->
    <link name="${ns}_${name}_link">
        <inertial>
          <mass value="0.009"/>
          <origin rpy="0 0 0" xyz="8.8025467e-03 -1.7219289e-03 0.0"/>
          <inertia ixx="2.6586142e-07" ixy="1.2416847e-08" ixz="0.0" iyy="5.9935767e-07" iyz="0.0" izz="6.6781963e-07"/>
        </inertial>
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="$(arg meshes_dir)/ph_distal.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="qbhand/palm"/>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="$(arg meshes_dir)/ph_distal_collision.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
    </link>

    <!-- GAZEBO REF -->
    <gazebo reference="${ns}_${name}_link">
      <material>Gazebo/Grey</material>
      <selfCollide>true</selfCollide>
	  </gazebo>
    
    <gazebo>
      <plugin name="${ns}_${name}_joint_plugin" filename="libsofthands_plugin.so">
        <joint>${ns}_${name}_joint</joint>
        <namespace>${ns}</namespace>
        <stiffness>10</stiffness>
      </plugin>
    </gazebo>

  </xacro:macro>

</robot>