<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="phalanx" params="type ns parent name position orientation">


    <joint name="${ns}_${type}_${parent}_${name}_joint" type="revolute">
      <origin rpy="${orientation}" xyz="${position}"/>
      <parent link="${ns}_${type}_${parent}_link"/>
      <child link="${ns}_${type}_${parent}_${name}_virtual_link"/>
      <axis xyz="0 0 -1"/>
      <dynamics damping="0.0" friction="0.0"/>
      <limit effort="30" velocity="1.0" lower="-1.57" upper="1.57" />
      <mimic joint="${ns}_synergy_joint" multiplier="0.785"/>
    </joint>

    <link name="${ns}_${type}_${parent}_${name}_virtual_link">
      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="1e-4"/>
        <inertia ixx="1e-9" ixy="0.0" ixz="0.0" iyy="1e-9" iyz="0.0" izz="1e-9"/>
      </inertial>
    </link>

    <!-- Virtual -->
    <joint name="${ns}_${type}_${parent}_${name}_virtual_joint" type="revolute">
      <origin rpy="0 0 0" xyz="0.013 0 0"/>
      <parent link="${ns}_${type}_${parent}_${name}_virtual_link"/>
      <child link="${ns}_${type}_${name}_link"/>
      <axis xyz="0 0 -1"/>
      <dynamics damping="0.0" friction="0.0"/>
      <limit effort="30" velocity="1.0" lower="-1.57" upper="1.57" />
      <mimic joint="${ns}_${type}_${parent}_${name}_joint" multiplier="1.0"/>
    </joint>


    <link name="${ns}_${type}_${name}_link">
      <inertial>
        <mass value="0.0063"/>
        <origin rpy="0 0 0" xyz="4.7601567e-03 -1.3786947e-03 0.0"/>
        <inertia ixx="1.8024201e-07" ixy="5.756798e-09" ixz="0.0" iyy="2.3516266e-07" iyz="0.0" izz="2.691504e-07"/>
      </inertial>
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://softhands_description/meshes/softhands/v2.0_qb/ph_short.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://softhands_description/meshes/softhands/v2.0_qb/ph_short_collision.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
    </link>
    <gazebo reference="${ns}_${type}_${name}_link">
      <material>Gazebo/Grey</material>
      <self_collide>false</self_collide>
    </gazebo>

  </xacro:macro>

</robot>