<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="phalanx_knuckle" params="ns name parent *origin side">


    <!-- Proximal JOINT -->
    <joint name="${ns}_${name}_joint" type="revolute">
      <xacro:insert_block name="origin"/>
      <parent link="${ns}_${parent}_link"/>
      <child link="${ns}_${name}_link"/>
      <axis xyz="0 0 -1"/>
      <dynamics damping="0.0" friction="0.0"/>
      <limit effort="100" lower="-0.524" upper="0.524" velocity="100"/>
    </joint>

    <!-- LINK -->
    <link name="${ns}_${name}_link">
      <inertial>
        <mass value="0.0095"/>
        <origin rpy="0 0 0" xyz="4.2753603e-04  0.0 -1.4321738e-03"/>
        <inertia ixx="6.4337303e-07" ixy="0.0" ixz="-3.9373913e-08" iyy="1.1253771e-06" iyz="0.0" izz="7.2336948e-07"/>
      </inertial>
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="$(arg meshes_dir)/ph_knuckle.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="qbhand/palm"/>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="$(arg meshes_dir)/ph_knuckle.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>
    </link>

    <!-- GAZEBO REF -->
    <gazebo reference="${ns}_${name}_link">
      <material>Gazebo/Grey</material>
      <selfCollide>true</selfCollide>
	  </gazebo>
    
    <!-- Plugin Knuckle -->
    <gazebo>
      <plugin name="${ns}_${name}_joint_plugin" filename="libsofthands_plugin.so">
        <joint>${ns}_${name}_joint</joint>  
        <namespace>${ns}</namespace>
        <stiffness>20</stiffness>
      </plugin>
    </gazebo>


    <!-- VIRTUAL JOINT -->
		<joint name="${ns}_${name}_virtual_joint" type="revolute">
      <axis xyz="0 0 -1"/>
      <dynamics damping="0.0" friction="0.0"/>
      <limit effort="30" velocity="1.0" lower="-0.785398" upper="0.785398" />
			<origin rpy="1.57 0 0" xyz="0.009 0 0"/>
			<parent link="${ns}_${name}_link"/>
			<child link="${ns}_${name}_virtual_link"/>
		</joint>

    <!-- VIRTUAL LINK -->
    <link name="${ns}_${name}_virtual_link">
      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="1e-4"/>
        <inertia ixx="0.001"  ixy="0"  	        ixz="0" 
                              iyy="0.001" 	    iyz="0" 
                                                izz="0.001" />
        </inertial>
	
    </link>

    <!-- Plugin Proximal -->
    <gazebo>
      <plugin name="${ns}_${name}_virtual_joint_plugin" filename="libsofthands_mimic_two_plugin.so">
        <joint>${ns}_${name}_virtual_joint</joint>
        <namespace>${ns}</namespace>  
        <stiffness>10</stiffness>
      </plugin>
    </gazebo>
    
  </xacro:macro>

</robot>